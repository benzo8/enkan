{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "-i", "mb.txt",
                "--run"],
        },
        {
            "name": "Run make-input-file",
            "type": "debugpy",
            "request": "launch",
            "justMyCode": false,
            "program": "${workspaceFolder}/input-file-tests/make-input.py",
            "cwd": "${fileDirname}",
            "console": "integratedTerminal",
            "args": [
                "-n", "SofiE",
                "-g", "b6",
            ],
        }
    ]
}